{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "API Server",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "simple_rest_api.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "80"
            ],
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Generate API key",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/simple_rest_api/cli/generate_api_key.py",
            "args": ["${input:app_name}"],
            "console": "integratedTerminal"
        },
        {
            "name": "Validate API key",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/simple_rest_api/cli/validate_api_key.py",
            "args": [
                "${input:app_name}",
                "${input:api_key}"
            ],
            "console": "integratedTerminal"
        }
    ],
    "inputs": [
        {
            "id": "app_name",
            "type":"promptString",
            "description": "App name associated with API key"
        },
        {
            "id": "api_key",
            "type":"promptString",
            "description": "API key (raw, unhashed)"
        }
    ]
}